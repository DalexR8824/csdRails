<!-- START LOGIN BOX -->
    <div class="box-type-login">
      <div class="box text-center">
        <div class="box-head" style="margin-bottom: 40%;">
          <img alt="cloudservicedeskblanco2.png" src="http://soporte.rds-la.com/files/large/055d99f4794d13675827df1e8ef3206e.png">
        </div>
        <div class="box-body box-centered style-inverse">
          <h2 class="text-light">Iniciar Sesión</h2>
          <br/>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <%= f.email_field :email, autofocus: true, :class =>"form-control", placeholder:"Correo Electronico" %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <%= f.password_field :password, autocomplete: "off", :class =>"form-control", placeholder:"Contraseña"  %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-6 text-left">
                <div data-toggle="buttons">
                  <%= f.label :remember_me, :class => "btn checkbox-inline btn-checkbox-primary-inverse" do %>
                    <%= f.check_box :remember_me%> Permanecer conectado
                  <% end %>
                </div>
              </div>
              <div class="col-xs-6 text-right">
                <%= content_tag(:button, '', name: :submit, value: "", class: "btn btn-primary submit") do%>
                  <i class="fa fa-key"></i> Ingresar
                <% end %>
                
              </div>
            </div>
          <% end %>
        </div><!--end .box-body -->
        <div class="box-footer force-padding text-white">
          <%= render "devise/shared/links" %>
          <span class="text-primary-alt blanco">© 2018 Cloud Service Desk by <a href="http://www.reddesignsystems.com/" target="_blank">Red Design Systems</a> - Versión 2.0</span>
        </div>
      </div>
    </div>
    <!-- END LOGIN BOX -->



