<div class="">
            <div class="page-title">
              <div class="title_left">
                <h3>Administrador de Formularios</h3>
              </div>

              <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                    </span>
                  </div>
                </div>
              </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Estados</h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <%= link_to 'Nuevo',new_user_path, :class => "btn btn-round btn-success"%>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">

                    <table class="table">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Nombre</th>
                          <th>apellido</th>
                          <th>E-mail</th>
                          <th>Opciones</th>
                        </tr>
                      </thead>
                      <tbody>
                        <%- item = 1 %>
                        <%- @users.each do |users|  %>
                          <tr>
                            <td><%= item %></td>
                            <td><%= users.name %></td> 
                            <td><%= users.lastName %></td>
                            <td><%= users.email%></td>
                            <td><%= link_to "Editar", edit_user_path(users), :class => "btn btn-info btn-xs" %> 
                                <%= link_to 'Eliminar', user_path(users), :method => :DELETE, data: {confirm: 'Esta seguro?'}, :class => "btn btn-danger btn-xs" %>
                            </td>
                          </tr>
                          <%- item = item + 1 %>
                        <% end %>
                        
                      </tbody>
                    </table>

                  </div>
                </div>
              </div>

            </div>
          </div>